<div class="container">
    <%= form_for(@cd, url: admin_cd_path) do |f| %>
	<h2>CD編集<h2>
        <label>CDジャケット画像</label><br>
        <div>
            <%= f.attachment_field :image, class:"image" %>
        </div>
        <label>アルバム/シングル名</label><br>
			<%= f.text_field :cd_name, class:"cd_name col-xs-12" %><br>
		<label>アーティスト名</label><br>
				<%= f.collection_select(:artist_id, Artist.all, :id, :name) %>
			<div>
            	<div id="artist_button" class="new_lebel btn-sm btn-success">新規登録</div><br>
        	</div>
		<label>単価</label><br>
			<%= f.text_field :price, class:"price col-xs-12" %>円<br>
		<label>レーベル</label><br>
		    <%= f.collection_select(:label_id, Label.all, :id, :name) %>
            <div id="label_button" class="new_lebel btn-sm btn-success">新規登録</div><br>
		<label>CDジャンル</label><br>
		    <%= f.collection_select(:genre_id, Genre.all, :id, :name) %>
            <div id="genre_button" class="new_lebel btn-sm btn-success">新規登録</div><br>

		<label>在庫数</label><br>
			<%= f.text_field :stock, class:"stock col-xs-12" %>個<br>
            <%= f.submit "編集", class:"create_admin_cd btn btn-success col-xs-12" %>
	<% end %>

	<div id="cd-modal-artist" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
	<div class="modal-dialog">
		<div class="modal-content">
		   <h2>アーティスト名登録</h2>
		   <%= form_for(@artist, url: admin_artists_path) do |f| %>
		   <%= f.text_field :name, class:"artist_name col-xs-12" %>
		   <%= f.submit "新規登録", class:"create_artist btn btn-primary col-xs-12" %>
		   <% end %>
		  </div>
		</div>
	</div>
	<div id="cd-modal-label" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
	<div class="modal-dialog">
	  <div class="modal-content">
	   <h2>レーベル名登録</h2>
	   <%= form_for(@label, url: admin_labels_path) do |f| %>
	   <%= f.text_field :name, class:"label_name col-xs-12" %>
	   <%= f.submit "新規登録", class:"create_label btn btn-primary col-xs-12" %>
	   <% end %>
	  </div>
	</div>
	</div>
	<div id="cd-modal-genre" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog">
		<div class="modal-content">
		<h2>ジャンル名登録</h2>
		<%= form_for(@genre, url: admin_genres_path) do |f| %>
		<%= f.text_field :name, class:"genre_name col-xs-12" %>
		<%= f.submit "新規登録", class:"edit_admin_genre btn btn-primary col-xs-12" %>
		<% end %>
		</div>
	</div>
    </div>
</div>
<script>
	$(function(){
		$('#artist_button').on('click', function(){
			$('#cd-modal-artist').modal('show');
		});
		$('#label_button').on('click', function(){
			$('#cd-modal-label').modal('show');
		});
		$('#genre_button').on('click', function(){
			$('#cd-modal-genre').modal('show');
		});
	});
</script>