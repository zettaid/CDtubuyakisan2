<h2>ユーザー新規登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

　　<div class="field">
    <%= f.label :名前（姓） %><br />
    <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class: "name" %>
  </div>

  <div class="field">
    <%= f.label :名前（名） %><br />
    <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class: "name" %>
  </div>

  <div class="field">
    <%= f.label :名前（セイ） %><br />
    <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana", class: "name" %>
  </div>

  <div class="field">
    <%= f.label :名前（メイ） %><br />
    <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana", class: "name" %>
  </div>

  <div class="field">
    <%= f.label :郵便番号 %><br />
    <%= f.text_field :post_number, autofocus: true, autocomplete: "post_number", class: "address" %>
  </div>

  <div class="field">
    <%= f.label :住所 %><br />
    <%= f.text_field :address, autofocus: true, autocomplete: "address", class: "address" %>
  </div>

  <div class="field">
    <%= f.label :電話番号 %><br />
    <%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number", class: "phone_number" %>
  </div>

  <div class="field">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :パスワード %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "password" %>
  </div>

  <div class="field">
    <%= f.label :パスワード（確認） %><br />
    <%= f.password_field :password_confirmation, autocomplete: "password-confirm", class: "password-confirm" %>
  </div>

  <div class="actions">
    <%= f.submit "登録する" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
