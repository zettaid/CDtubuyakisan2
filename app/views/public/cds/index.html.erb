<div id="nav-search">
    <%= form_tag '/public/cds', :method => 'get' do %>
        <p>
            <%= text_field_tag :search, params[:search] %>
            <%= submit_tag "検索", :cd_name => nil %>
        </p>
    <% end %>

    <table class="table table-hover table-inverse">
	<thead>
			<tr>
				<th></th>
				<th>title</th>
				<th>artist name</th>
				<th>price</th>
			</tr>
	</thead>
	<tbody>
			<% @cds.each do |cd| %>
			<tr>
				<td><%= attachment_image_tag cd, :image, :fill, 50, 50, fallback: "no_image.jpg",size: '50x50' %></td>
				<td><%= link_to cd.cd_name, public_cd_path(cd.id), class:"public_cd_#{cd.id}" %></td>
				<td><%= cd.artist.name %></td>
				<td><%= cd.price %> 円</td>
			</tr>
		<% end %>
</div>

